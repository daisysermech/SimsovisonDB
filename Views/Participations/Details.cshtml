@model SimsovisionDataBase.Participations

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Participations</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdParticipantNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdParticipantNavigation.ParticipantName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdSongNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdSongNavigation.SongName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdYearOfContestNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdYearOfContestNavigation.YearOfContest)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Place)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Place)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdNominationNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdNominationNavigation.NominationName)
        </dd>
    </dl>
</div>
<div>
    @if ((User.IsInRole("admin")) || (User.IsInRole("moder")))
    {<a asp-action="Edit" asp-route-id="@Model.IdParticipation">Edit</a> }|
    <a asp-action="Index">Back to List</a>
</div>
