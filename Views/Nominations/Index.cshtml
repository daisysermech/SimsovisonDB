@model IEnumerable<SimsovisionDataBase.Nominations>

@{
    ViewData["Title"] = "Index";
}

<h1>Номинации</h1>

<p>
    @if ((User.IsInRole("admin")) || (User.IsInRole("moder")))
    {<a asp-action="Create">Добавить</a>}
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NominationName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NominationName)
            </td>
            <td>
                @if ((User.IsInRole("admin")) || (User.IsInRole("moder")))
                {<a asp-action="Edit" asp-route-id="@item.IdNomination">Редактировать</a>} |
                <a asp-action="Details" asp-route-id="@item.IdNomination">Перейти к номированным</a> |
                @if ((User.IsInRole("admin")) || (User.IsInRole("moder")))
                {<a asp-action="Delete" asp-route-id="@item.IdNomination">Удалить</a>}
            </td>
        </tr>
}
    </tbody>
</table>
