@model SimsovisionDataBase.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
    <form asp-action="Edit" asp-controller="Users">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div>
            <label asp-for="Email"></label><br />
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="DateofBirth"></label><br />
            <input asp-for="DateofBirth" />
            <span asp-validation-for="DateofBirth"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </form>